<UserControl x:Class="ConfigGen.Views.Options"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             
             d:Height="209" d:Width="378"
             Background="#ffffff"
             BorderBrush="#b4b4b4"
             BorderThickness="1">

    <Grid x:Name="TheGrid">

        <TextBlock
            Text="Select the option you want the generator to perform"
            ToolTip="Config generator settings"
            Margin="20,20,0,0"
            VerticalAlignment="Top" HorizontalAlignment="Left" 
            Height="18" Width="280"/>

        <CheckBox x:Name="UseUserServerPrivateKey"
            Margin="20,54,0,0"
            IsChecked="False"
            Tag="PrivateKeyBox"
            Content="Use existing server Private-Key"
            Height="19" Width="185" 
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Checked="CheckToggled"
            Unchecked="CheckToggled"/>

        <TextBox x:Name="UseUserServerPrivateKeyValue"
            Text="&lt;privateKey&gt;"
            Tag="WireGuardKey:false"
            IsEnabled="False"
            Margin="218,53,0,0"
            HorizontalAlignment="Left"
            Width="145" Height="21"
            VerticalAlignment="Top"
            IsKeyboardFocusedChanged="TextBoxFocusChanged"
            TextChanged="TextChanged_ValidateNew"/>

        <CheckBox x:Name="UsePresharedKeys"
            Margin="20,78,0,0"  
            Content="Use pre-shared keys"
            Height="19" Width="130"
            IsChecked="True"
            VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <CheckBox x:Name="ServerKeepAlive"
            Margin="20,102,0,0"
            Tag="ServerKeepAlive"
            IsChecked="False"
            Content="Use server KeepAlive"
            Height="19" Width="130" 
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Checked="CheckToggled"
            Unchecked="CheckToggled"/>

        <TextBox x:Name="ServerKeepAliveValue"
            Text="&lt;time in ms&gt;"
            Tag="KeepAliveTime:false"
            IsEnabled="False"
            Margin="190,101,0,0"
            HorizontalAlignment="Left"
            Width="135" Height="21"
            VerticalAlignment="Top"
            IsKeyboardFocusedChanged="TextBoxFocusChanged"
            TextChanged="TextChanged_ValidateNew"/>

        <CheckBox x:Name="ClientKeepAlive"
            Margin="20,126,0,0"
            Tag="ClientKeepAlive"
            Content="Use client KeepAlive"
            Height="19" Width="130"
            IsEnabled="True"
            IsChecked="False"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Checked="CheckToggled"
            Unchecked="CheckToggled"/>

        <TextBox x:Name="ClientKeepAliveValue"
            Text="&lt;time in ms&gt;"
            Tag="KeepAliveTime:false"
            IsEnabled="False"
            Margin="190,125,0,0"
            HorizontalAlignment="Left"
            Width="135" Height="21"
            VerticalAlignment="Top"
            IsKeyboardFocusedChanged="TextBoxFocusChanged"
            TextChanged="TextChanged_ValidateNew"/>

        <TextBlock
            Text="Number of Clients:"
            Margin="39,151,0,0"
            VerticalAlignment="Top" HorizontalAlignment="Left" 
            Height="18" Width="105"/>

        <TextBox x:Name="NumberOfClients"
            Text="5"
            Tag="NumberOfClients:true"
            Margin="190,149,0,0"
            HorizontalAlignment="Left"
            Width="135" Height="21"
            VerticalAlignment="Top"
            TextChanged="TextChanged_ValidateNew"/>

    </Grid>
</UserControl>