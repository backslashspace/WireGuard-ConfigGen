            Height="19" Width="208" 
            VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <CheckBox Style="{DynamicResource CheckBoxStyle}"
            Margin="20,102,0,0"  
            Content="test"
            IsChecked="True"
            Height="19" Width="208" 
            VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <CheckBox Style="{DynamicResource CheckBoxStyle}"
            Margin="20,78,0,0"  
            Content="test"
